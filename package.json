{
  "name": "template_react",
  "version": "1.0.0",
  "description": "template react monorepo",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently -c green,yellow -t \"HH:mm:ss\" -p \"{name} {time}\" \"npm:dev:*\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "start": "npm run start --workspace=server",
    "check": "biome check --error-on-warnings --no-errors-on-unmatched --staged .",
    "fix": "npx @biomejs/biome format --write .",
    "test": "npm run test --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aikofr/template_react.git"
  },
  "author": "Aiko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Aikofr/template_react/issues"
  },
  "homepage": "https://github.com/Aikofr/template_react#readme",
  "devDependencies": {
      "@biomejs/biome": "1.9.2",
      "concurrently": "^9.0.1"
  }
}
